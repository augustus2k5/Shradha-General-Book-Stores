@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model Eproject2025.DTOs.CategoryDTO
@{
    ViewBag.Title = "Add Category";
}

<h4>Create Category</h4>
<div class="col-md-9">
    <form asp-action="AddCategory" enctype="multipart/form-data" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Category Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Status</label>
            <select asp-for="Status" class="form-control">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

<div>
    @Html.ActionLink("Back to List Categories", "Index")
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (ViewBag.ValidationErrors != null)
    {
        <script>
            console.log("⚠️ Validation Errors:");
            @foreach (var error in ViewBag.ValidationErrors)
            {
                    <text>console.log("@error");</text>
            }
        </script>
    }
}