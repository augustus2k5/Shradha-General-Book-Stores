@model IEnumerable<Eproject2025.Models.Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Categories</h1>
<a asp-action="AddCategory" class="btn btn-secondary">Create Category</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>@category.Status</td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="ViewSubCategory" asp-route-id="@category.CategoryId" class="btn btn-info btn-sm">
                            View Subcategory
                        </a>
                        <a asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">
                            Edit
                        </a>
                        <a asp-action="ToggleStatus" asp-route-id="@category.CategoryId" class="btn btn-secondary btn-sm">
                            Status
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
