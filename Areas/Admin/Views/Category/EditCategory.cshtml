@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model Eproject2025.DTOs.CategoryDTO
@{
    ViewBag.Title = "Edit Category";
}

<h4>Edit Category</h4>
<div class="col-md-9">
    <form asp-area="Admin" asp-controller="Category" asp-action="EditCategory" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="CategoryId" />
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Category Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
</div>

<div>
    @Html.ActionLink("Back to List Categories", "Index")
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (ViewBag.ValidationErrors != null)
    {
        <script>
            console.log("⚠️ Validation Errors:");
            @foreach (var error in ViewBag.ValidationErrors)
            {
                        <text>console.log("@error");</text>
            }
        </script>
    }
}